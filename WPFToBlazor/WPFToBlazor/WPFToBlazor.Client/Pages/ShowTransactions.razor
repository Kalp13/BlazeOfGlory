    }

    // Sample data source
    private List<Bill> BillsList = new()
    {
        new Bill { BillId = 1, BillDate = DateTime.Now, GrandTotal = 100, Discount = 10, SubTotal = 90 },
        new Bill { BillId = 2, BillDate = DateTime.Now.AddDays(-1), GrandTotal = 200, Discount = 20, SubTotal = 180 }
    };

